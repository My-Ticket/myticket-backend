{
  "name": "myticket-backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "swc src --out-dir dist --source-maps",
    "watch": "concurrently -n swc,node \"npm:watch:build\" \"npm:watch:run\"",
    "watch:build": "swc src --out-dir dist --source-maps --watch",
    "watch:run": "nodemon dist/index.js",
    "start": "node dist/index.js"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.58",
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/pg": "^8.10.1",
    "chokidar": "^3.5.3",
    "concurrently": "^8.0.1",
    "nodemon": "^2.0.22",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@types/express": "^4.17.17",
    "bcrypt": "^5.1.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "pg-promise": "^11.4.3"
  }
}
